<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ProfilActivity">

    <LinearLayout
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:src="@drawable/arrow_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/backgroud_putih"
            android:text="Kembali"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/foto_profil"
        android:layout_width="match_parent"
        android:layout_marginVertical="28dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_back">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/retanglefoto"
            android:layout_centerInParent="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@drawable/akbaralzaini" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/foto_profil"
        android:orientation="vertical"
        android:background="@drawable/shape_top_radius_agakputih">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="16dp"
            android:textColor="#1D1D1D"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="20dp"
            android:background="@color/backgroud_putih"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/graduate_ungu"/>
            <TextView
                android:id="@+id/nama_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akbar Al Zaini"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="20dp"
            android:background="@color/backgroud_putih"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/card_ungu"/>
            <TextView
                android:id="@+id/idcard_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09031281621120"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="20dp"
            android:background="@color/backgroud_putih"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calendar_ungu"/>
            <TextView
                android:id="@+id/ttl_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lahat, 11 maret 1999"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="20dp"
            android:background="@color/backgroud_putih"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/map_marker_ungu"/>
            <TextView
                android:id="@+id/alamat_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palembang, Sumatera selatan"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_edit_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="@color/backgroud_putih"
        android:background="@drawable/shape_radius_green"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingHorizontal="50dp"
        android:layout_marginBottom="28dp"/>

</RelativeLayout>