<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".siswaActivity.DashboardSiswaActivity">

    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOTING KETUA OSIS"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_margin="14dp"
        android:textColor="@color/backgroud_putih"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dashboard_title"
        android:padding="12dp"
        android:background="@drawable/shape_top_radius_agakputih">

        <FrameLayout
            android:id="@+id/photo_ptofil"
            android:layout_width="70dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/gambar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="6dp"
                android:src="@drawable/user" />

            <ImageView
                android:src="@drawable/profilframe"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/nama_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/photo_ptofil"
            android:text="Akbar Al Zaini"
            android:layout_marginTop="2dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <View
            android:id="@+id/hairline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E2E2"
            android:layout_below="@id/photo_ptofil"
            android:layout_marginTop="12dp"/>


        <TextView
            android:id="@+id/des_daftar_pasangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAFTAR PASANGAN"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/hairline"
            android:layout_centerHorizontal="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_daftar_pasangan"
            android:id="@+id/list_pasangan"
            android:scrollbars="vertical"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/internet_hilang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_daftar_pasangan"
            android:text="Hidupkan Koneksi Internet"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>