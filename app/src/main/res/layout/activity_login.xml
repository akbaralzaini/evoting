<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/v"
        android:layout_marginBottom="12dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/backgroud_putih"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/logo"/>

    <RelativeLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_radius_white"
        android:padding="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0.1dp"
        android:layout_below="@id/login_text">
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/email"/>
        <TextView
            android:id="@+id/name_email"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/email_icon"
            android:text="Username"/>
        <EditText
            android:id="@+id/username_login"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_email"
            android:layout_toRightOf="@id/email_icon"
            android:hint="username"
            android:background="@android:color/transparent"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/password"
        android:elevation="10dp"
        android:translationZ="2dp"
        android:outlineProvider="paddedBounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_radius_white"
        android:padding="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@id/email">
        <ImageView
            android:id="@+id/password_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/password"/>
        <TextView
            android:id="@+id/name_password"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/password_icon"
            android:text="Password"/>
        <EditText
            android:id="@+id/password_login"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_password"
            android:layout_toRightOf="@id/password_icon"
            android:inputType="textPassword"
            android:hint="****************"
            android:background="@android:color/transparent"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:background="@drawable/shape_radius_red"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:padding="8dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/backgroud_putih"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/text_daftar"
        android:layout_width="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_login"
        android:text="jika anda belum memiliki akun silakan"
        android:textColor="@color/backgroud_putih"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/button_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Disini"
        android:textColor="@color/main_hijau"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@id/text_daftar"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sekolah Tinggi Managemen Informasi dan Komputer Prabumulih"
        android:textColor="@color/backgroud_putih"
        android:textSize="16sp"
        android:textAlignment="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_above="@id/ppppp"
        android:id="@+id/sekolah"/>

    <TextView
        android:id="@+id/ppppp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="( STMIK PRABUMULIH )"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textColor="@color/backgroud_putih"
        android:textAlignment="center"
        android:layout_marginBottom="32dp"/>

</RelativeLayout>