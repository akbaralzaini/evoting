<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="@color/colorPrimaryDark">


    <ImageView
        android:id="@+id/ilustrasi_login"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:src="@drawable/drawkit_login"
        android:layout_marginTop="50dp"
        android:layout_marginRight="-80dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ilustrasi_login"
        android:text="Voting Ketua Osis terbaikmu"
        android:textSize="20sp"
        android:textColor="@color/backgroud_putih"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="12dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_putih_splash">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mulai"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="12dp"/>

    </RelativeLayout>


</RelativeLayout>