<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".adminactivity.HasilActivity">

    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HASIL VOTING KETUA OSIS"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_margin="14dp"
        android:textColor="@color/backgroud_putih"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dashboard_title"
        android:padding="12dp"
        android:background="@drawable/shape_top_radius_agakputih">


        <TextView
            android:id="@+id/des_daftar_pasangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAFTAR PASANGAN"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginVertical="12dp"
            android:layout_centerHorizontal="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_daftar_pasangan"
            android:id="@+id/list_hasil1"
            android:scrollbars="vertical"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/internet_hilang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_daftar_pasangan"
            android:text="Hidupkan Koneksi Internet"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/chart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHART HASIL"
            android:layout_below="@id/list_hasil1"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginVertical="12dp"
            android:layout_centerHorizontal="true"/>

        <com.github.mikephil.charting.charts.PieChart
            android:layout_below="@id/chart_title"
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>

    </RelativeLayout>

</RelativeLayout>