<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".adminactivity.DashboardActivity">

    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DASHBOARD"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_margin="14dp"
        android:textColor="@color/backgroud_putih"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dashboard_title"
        android:padding="12dp"
        android:background="@drawable/shape_top_radius_agakputih">

        <FrameLayout
            android:id="@+id/photo_ptofil"
            android:layout_width="70dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/gambar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="6dp"
                android:src="@drawable/akbaralzaini" />

            <ImageView
                android:src="@drawable/profilframe"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/nama_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/photo_ptofil"
            android:text="Akbar Al Zaini"
            android:layout_marginTop="2dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <View
            android:id="@+id/hairline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E2E2"
            android:layout_below="@id/photo_ptofil"
            android:layout_marginTop="12dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hairline"
            android:id="@+id/button_button"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/button_tambahkandidat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:elevation="10dp"
                android:translationZ="2dp"
                android:outlineProvider="paddedBounds"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_radius_white"
                android:layout_below="@id/list_kandidat">
                <ImageView
                    android:id="@+id/icontambah"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/plus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Kandidat"
                    android:textSize="14sp"
                    android:textColor="#A8A8A8"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icontambah"/>
            </RelativeLayout>
            <RelativeLayout

                android:id="@+id/button_tambahpasangan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:elevation="10dp"
                android:translationZ="2dp"
                android:outlineProvider="paddedBounds"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_radius_white"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_below="@id/list_kandidat">
                <ImageView
                    android:id="@+id/icontambahpasnagan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/plus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Pasangan"
                    android:textSize="14sp"
                    android:textColor="#A8A8A8"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icontambahpasnagan"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/des_daftar_kandidat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Kandidat"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/button_button"
            android:layout_centerHorizontal="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_kandidat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:background="@android:color/transparent"
            android:layout_below="@id/des_daftar_kandidat"/>


        <View
            android:id="@+id/hairline2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E2E2"
            android:layout_below="@id/list_kandidat"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/des_daftar_pasangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Pasangan"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginVertical="12dp"
            android:layout_below="@id/hairline2"
            android:layout_centerHorizontal="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_daftar_pasangan"
            android:id="@+id/list_pasangan"
            android:scrollbars="vertical"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/internet_hilang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_daftar_pasangan"
            android:text="Hidupkan Koneksi Internet"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>